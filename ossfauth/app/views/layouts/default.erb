<% head_content = capture do -%>
  <%= render :file => 'layouts/head'%>
<% end -%>

<% content_for :header_content do -%>
  <%= render :partial => 'layouts/header'%>
<% end -%>

<% content_for :menu_content do -%>
  <%= render :partial => 'layouts/menu'%>
<% end %>

<% content_for :body_content do -%>
    <%= yield %>
<% end -%>

<% content_for :note_content do -%>
  <%= render :file => @extra_note %>
<% end if @extra_note -%>

<%= render :file => 'layouts/integration' ,:locals => {:head_content => head_content }%>
